FROM rocker/tidyverse:latest  
  
RUN apt-get update -qq && apt-get install -y --no-install-recommends \  
    python3-pip \  
    python3-venv \  
    python3-dev \  
    && apt-get clean \  
    && rm -rf /var/lib/apt/lists/*  
  
RUN pip3 install --upgrade pip  
RUN pip3 install azureml-defaults  
